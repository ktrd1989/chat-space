.chat-main-message{data: {id: "#{message.id}"}}
  .chat-main-message-top
    .chat-main-message-top-name
      = message.user.name
    .chat-main-message-top-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main-message-text
    - if message.content.present?
      %p.chat-main-message-text__content
        = message.content
    = image_tag message.image.url, class: 'chat-main-message-text__image' if message.image.present?
